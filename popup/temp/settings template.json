{
    "settings": [
        {
            "title": "Show best friends on top",
            "type": "toggle",
            "default": true,
            "description": "Prioritize best friends in the friends list",
            "template": "<div class=\"Setting\"> <div class=\"Setting_Text\">Show best friends on top</div><label class=\"Setting_Toggle\" for=\"switch\"><div class=\"toggle_outer\"><input id=\"switch\" type=\"checkbox\" /><div class=\"button\"><span class=\"button_toggle\"></span><span class=\"button_indicator\"></span></div></div></label></div>"
        },
        {
            "title": "Theme color",
            "type": "color",
            "default": "#FFFC00",
            "description": "Main theme color for the interface"
        },
        {
            "title": "Background opacity",
            "type": "slider",
            "default": 100,
            "min": 0,
            "max": 100,
            "step": 5,
            "description": "Adjust the background transparency"
        },
        {
            "title": "Custom profile picture",
            "type": "file",
            "default": "",
            "accept": "image/*",
            "description": "Upload a custom profile picture"
        },
        {
            "title": "Refresh Friends",
            "type": "button",
            "action": "refreshFriends",
            "description": "Update your friends list"
        },
        {
            "title": "Clear Data",
            "type": "button",
            "action": "clearData",
            "description": "Remove all stored data",
            "confirmation": true
        },
        {
            "title": "Friend emoji visibility",
            "type": "toggle",
            "default": false,
            "description": "Show friend emojis next to names"
        }
    ]
}